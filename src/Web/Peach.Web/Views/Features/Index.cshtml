    <ol class="carousel-indicators">
        <li data-target="#feature-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#feature-carousel" data-slide-to="1"></li>
        <li data-target="#feature-carousel" data-slide-to="2"></li>
        <li data-target="#feature-carousel" data-slide-to="3"></li>
        <li data-target="#feature-carousel" data-slide-to="4"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <img src="@Url.Content("~/content/features/login.png")" alt="..." />
        </div>

        <div class="item">
            <img src="@Url.Content("~/content/features/torrents.png")" alt="..." />
        </div>

        <div class="item">
            <img src="@Url.Content("~/content/features/torrent_details.png")" alt="..." />
        </div>
        
        <div class="item">
            <img src="@Url.Content("~/content/features/pushbullet.png")" alt="..." />
        </div>
        
