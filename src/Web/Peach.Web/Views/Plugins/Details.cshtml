@using Peach.Data.Domain
@model Peach.Web.Models.PluginDetailsDto
           
@helper Markdown(string input)
{
    var md = new MarkdownSharp.Markdown().Transform(input);
    @(new HtmlString(md))
}

@{
    ViewBag.Title = @Model.Plugin.Name + " | Plugins | Hadouken";
    var latestRelease = Model.Plugin.Releases.OrderByDescending(r => r.ReleaseDate).FirstOrDefault();
}

@if (Model.ShowEditLink)
{
    @section Actions
    {
        @Html.ActionLink("Edit details", "Edit", new {pluginId = Model.Plugin.Name})
    }
}

<h3>@Model.Plugin.Name <small>@(latestRelease != null ? latestRelease.Version.ToString() : "")</small></h3>

@if (latestRelease == null)
{
    <p><em>(this plugin has made no releases yet)</em></p>
}
else
{
    @Markdown(latestRelease.ReleaseNotes)

    <h4>Releases</h4>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="width: 30%;">Version</th>
                <th>Release date</th>
                <th>Direct download</th>
            </tr>
        </thead>
            
        @foreach (var release in Model.Plugin.Releases.OrderByDescending(r => r.ReleaseDate))
        {
            <tr>
                <td>@release.Version</td>
                <td>@release.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td><a href="@release.DownloadUri">@Model.Plugin.Name-@(release.Version).zip</a></td>
            </tr>
        }
    </table>
}